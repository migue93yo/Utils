<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/adapter_select_directory_layout">

    <ImageView
        android:id="@+id/select_directory_imagen"
        android:background="@drawable/directory"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/select_directory_rute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/select_directory_imagen"
        android:layout_alignBottom="@+id/select_directory_imagen"
        android:layout_toEndOf="@+id/select_directory_imagen"
        android:gravity="center"/>

    <View
        android:id="@+id/setting_employee_separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfcfcfcf"
        android:layout_below="@+id/select_directory_imagen"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>